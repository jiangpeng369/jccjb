<?xml version="1.0" encoding="utf-8"?>
<!--
    牌库计算器Activity布局
    展示卡池剩余数量，支持追三星可行性分析
-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 费用选择栏 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择费用:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary" />

                <Spinner
                    android:id="@+id/spinner_cost"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/spinner_background" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_reset_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重置"
                    style="?attr/borderlessButtonStyle"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 卡池汇总信息 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <TextView
                android:id="@+id/tv_pool_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="【3费卡】总卡牌: 234 | 剩余: 150 | 已拿: 84 | 已空: 2张"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- 图例说明 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图例: "
                android:textSize="12sp"
                android:textColor="@color/textSecondary" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:background="#2196F3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="很多"
                android:textSize="11sp"
                android:textColor="@color/textSecondary" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:background="#4CAF50" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="充足"
                android:textSize="11sp"
                android:textColor="@color/textSecondary" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:background="#FFC107" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="较少"
                android:textSize="11sp"
                android:textColor="@color/textSecondary" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:background="#FF9800" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="紧张"
                android:textSize="11sp"
                android:textColor="@color/textSecondary" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:background="#F44336" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="已空"
                android:textSize="11sp"
                android:textColor="@color/textSecondary" />
        </LinearLayout>

        <!-- 卡池列表 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卡池详情（点击选中，长按编辑）"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_card_pool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 追三星计算器 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/layout_three_star_calc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="追三星可行性分析"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="输入卡牌持有情况，判断是否适合追三星"
                    android:textSize="12sp"
                    android:textColor="@color/textSecondary" />

                <!-- 英雄名称 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="英雄名称"
                        android:textSize="14sp"
                        android:textColor="@color/textPrimary" />

                    <EditText
                        android:id="@+id/et_hero_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="点击上方卡牌自动填充"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 自己持有 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="自己持有"
                        android:textSize="14sp"
                        android:textColor="@color/textPrimary" />

                    <EditText
                        android:id="@+id/et_current_owned"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="0-9"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="张"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary" />
                </LinearLayout>

                <!-- 其他玩家持有 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="其他玩家持有"
                        android:textSize="14sp"
                        android:textColor="@color/textPrimary" />

                    <EditText
                        android:id="@+id/et_taken_by_others"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="0-?"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="张（估算）"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary" />
                </LinearLayout>

                <!-- 计算按钮 -->
                <Button
                    android:id="@+id/btn_calculate_feasibility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="计算追三星可行性"
                    android:backgroundTint="@color/colorPrimary" />

                <!-- 结果显示 -->
                <TextView
                    android:id="@+id/tv_feasibility_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:background="@drawable/bg_result"
                    android:text="点击上方按钮查看分析结果"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:lineSpacingMultiplier="1.3"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
