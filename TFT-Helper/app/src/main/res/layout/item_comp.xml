<?xml version="1.0" encoding="utf-8"?>
<!--
    阵容列表项布局
    展示单个阵容的基本信息
-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_comp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 阵容图片区域 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/iv_comp_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_comp_placeholder" />

            <!-- 评级标签 -->
            <TextView
                android:id="@+id/tv_tier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:background="@drawable/bg_tier_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="S级"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- 收藏按钮 -->
            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|end"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:src="@drawable/ic_favorite_border"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </FrameLayout>

        <!-- 信息区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 阵容名称 -->
            <TextView
                android:id="@+id/tv_comp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="阵容名称"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 热度 -->
            <TextView
                android:id="@+id/tv_popularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="热度 95"
                android:textSize="12sp"
                android:textColor="@color/textSecondary" />

            <!-- 胜率/前四率 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_win_rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="胜率 28.5%"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/tv_top4_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="前四 68.2%"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <!-- 核心羁绊 -->
            <TextView
                android:id="@+id/tv_traits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="剪纸仙灵(7) 决斗大师(2)"
                android:textSize="11sp"
                android:textColor="@color/textSecondary"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
